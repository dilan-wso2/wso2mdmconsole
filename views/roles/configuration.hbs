<div class="container-fluid">

	<div class="raw-fluid">
		<div class="span12">{{>config-navigation}}</div>
	</div>

	<div class="raw">
		<div class="span12">
			<div class="raw-fluid">

				<div class="block">
					<div class="block-header">
						<div class="block-header-title pull-left">Roles</div>
						<div class="pull-right">
							<a class="btn btn-orange" href="add"><i
								class="icon-plus icon-white"> </i> Add Role</a>
						</div>
					</div>

					<div class="block-body block-body container-fluid raw-fluid">


						<table cellpadding="0" cellspacing="0" border="0"
							class="table table-striped table-bordered" id="main-table">
							<thead>
								<tr>
									<th>Id</th>
									<th>Name</th>
								</tr>
							</thead>
							<tbody>
								{{#data.groups}}
								<tr>
									<td>{{id}}</td>
									<td>{{name}}</td>
								</tr>
								{{/data.groups}}
							</tbody>
						</table>
					</div>

				</div>

			</div>

		</div>

	</div>

</div>

