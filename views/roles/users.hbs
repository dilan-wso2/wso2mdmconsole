<div class="container-fluid">

	<div class="raw-fluid">
		<ul class="breadcrumb">
			<li>
				<a href="management">Roles</a><span class="divider">/</span>
			</li>
			<li class="active">
				Users
			</li>
		</ul>
	</div>

	<div class="raw-fluid">
		<div class="span3">
			<div class="block">
				<div class="block-header">
					<div class="block-header-title pull-left">
						Features List
					</div>

				</div>

				<div class="block-body container-fluid raw-fluid">					
					{{>feature-list-operations}}
				</div>
			</div>

		</div>

		<div class="span9">

			<div class="block">
				<div class="block-header">
					<div class="block-header-title pull-left">
						Manage Users
					</div>

					<div class="pull-right">
						<input type="text" class="search-query" placeholder="Search">
					</div>

				</div>

				<div class="block-body container-fluid raw-fluid">

					{{#data.users}}
					
					{{#compare no_of_devices 0 }}
					
					<div  class="span2 text-center small-block-disabled">						
						<div class="raw-fluid">
							<div class="small-block-name">
								<b>{{first_name}} {{last_name}}</b>
							</div>
							<div class="info">
								<div class="raw">
									{{email}}
								</div>
								<div class="raw">
									{{no_of_devices}} Devices
								</div>

							</div>
						</div> 						
					</div>
					
					{{else}}
					
					
					<div  class="span2 text-center small-block user-item" data-user-id='{{id}}' data-user='{{#stringify this}}{{/stringify}}'>
						<a href="{{../../appInfo.server_url}}users/devices?user={{id}}">
						<div class="raw-fluid">
							<div class="small-block-name">
								<b>{{first_name}} {{last_name}}</b>
							</div>
							<div class="info">
								<div class="raw">
									{{email}}
								</div>
								<div class="raw">
									{{no_of_devices}} Devices
								</div>

							</div>
						</div> 
						</a>

					</div>
					
					
					{{/compare}}

					
					{{/data.users}}

				</div>
			</div>

		</div>

	</div>

</div>

<!-- Modal Features -->
<div id="featureModal" class="modal hide" tabindex="-1" role="dialog" aria-hidden="true">

</div>